<% include ../partials/header %>

<div class='container'>
  <div class='row'>
    <div class="col-md-8 offset-md-2">
      <a href='/users'>Go Back</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 style='text-align: center'>Editing <%= user.username %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 form-group">
      <form action='/users/<%= user._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <label>User Name</label>
          <input class='form-control' type='text' value='<%= user.username %>' name='user[username]'>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 form-group">
            <div class='form-group'>
              <label>Email</label>
              <input class='form-control' type='text' value='<%= user.email %>' name='user[email]'>
            </div>
          </div>
        </div>
    <div class="row">
      <div class='col-md-8 offset-md-2 form-group'>
        <label>Account Type</label><br />
        <input
          type='radio'
          name='user[administrator]'
          value='true'
          <% if(user.administrator) { %>
            checked
          <% } %>
        > Administrator
        <input
          type='radio'
          name='user[administrator]'
          value='false'
          <% if(!user.administrator) { %>
            checked
          <% } %>
        > User
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 offset-md-2 form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>

<% include ../partials/footer %>
