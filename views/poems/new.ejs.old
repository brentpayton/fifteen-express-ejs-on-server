<% include ../partials/header %>

<div class='container'>
  <div class='row'>
    <h1 style='text-align: center'>Add a Poem</h1>
    <div style='margin: 25px auto;'>
      <form action='/poems' method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text' placeholder='title' name='title'>
        </div>
        <% var numberOfWords = 6 %>
        <%= poem.numberOfWords %>
        <div class='form-group'>
          <% for (var i = 0; i < numberOfWords; i++) { %>
            <input class='form-control' type='text' placeholder='line one word <%- i+1 %>' name='l1w<%- i+1 %>'>
          <% } %>
        </div>
        <div class='form-group'>
          <% for (var i = 0; i < numberOfWords; i++) { %>
            <input class='form-control' type='text' placeholder='line two word <%- i+1 %>' name='l2w<%- i+1 %>'>
          <% } %>
        </div>
        <%# <div class='form-group'>
          <textarea class='form-control' type='textarea' rows='3' placeholder='poem' name='content'></textarea>
        </div>%>
        <div class='form-group'>
          <button class='btn btn-md btn-primary btn-block'>Submit</button>
        </div>
      </form>
      <a href='/poems'>Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
