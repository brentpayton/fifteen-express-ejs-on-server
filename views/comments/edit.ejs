<% include ../partials/header %>

<div class='container'>
  <div class='row'>
    <h1 style='text-align: center'>Edit a Comment</h1>
    <div style='margin: 25px auto;'>
      <form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <textarea class='form-control' type='textarea' rows='3' name='comment[text]'><%= comment.text %></textarea>
        </div>
        <button class='btn btn-primary'>Submit</button>
      </form>
      <a href='/campgrounds'>Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
